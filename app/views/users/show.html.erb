<h1><%= @user.name %> profile</h1>

<h2>Created events</h2>
<% events = @user.created_events %>
<% if events.empty? %>
    <p>No events created</p>
<% else %>
    <ul>
        <% events.each do |event| %>
            <li><h3><%= event.title %></h3> <p><%= event.local %></p> <p><%=event.date  %></p></li>
        <% end %>
    </ul>
<% end %>

<h2>Participation in events</h2>

<% events_participations = @user.events_participations %> 

<% if events_participations.empty? %>
    <p>No participations in events</p>
<% else %>
    <% events_participations.each do |participations| %>
        <p><%= participations.title %> by <%= participations.creator.name%> 
        <%= button_to "Remove participation", participate_event_path, params: {user_id: current_user.id, event_id: participations.id}, method: :delete %> </p>
    <% end %>
<% end %>

